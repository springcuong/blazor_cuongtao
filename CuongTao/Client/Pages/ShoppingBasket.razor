@if (Phones.Any()) {
<ItemList Items="@Phones">
    <Header>
        <h1 class="">Giỏ hàng của bạn</h1>
    </Header>
    <RowTemplate Context="tuple">
        <PhoneItem Phone="@tuple.phone"
            ButtonClass="button-77"
            ButtonTitle="Xoá"
            Selected="@(() =>
            Selected.InvokeAsync(tuple.pos))" />
    </RowTemplate>
    <Footer>
        <div class="row">
            <div class="col"></div>
            <div class="col"><hr /></div>
            <div class="col"> </div>
            <div class="col"> </div>
        </div>
        <div class="row">
            <div class="col"> Total:</div>
            <div class="col text-right font-weight-bold">
                @($"{TotalPrice:0}")
            </div>
            <div class="col"> </div>
            <div class="col"> </div>
            <div class="col"> </div>
        </div>
    </Footer>
</ItemList>
}